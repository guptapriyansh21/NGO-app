<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ngo.finder.ChangeStatus"
    android:orientation="vertical"
    tools:showIn="@layout/activity_change_status">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="wrap_content">
    <ToggleButton
        android:id="@+id/btnPresent"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:checked="false"
        android:background="@drawable/round_toggle_others"
        android:textOn="Present"
        android:layout_margin="8dp"
        android:layout_gravity="center"
        android:textOff="Absent"

        />
    <ToggleButton
        android:id="@+id/btnAvailable"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:checked="false"
        android:layout_margin="8dp"
        android:textOn="Available"
        android:layout_gravity="center"
        android:background="@drawable/round_toggle_others"
        android:textOff="Unavailable"

        />
</LinearLayout>

    <ToggleButton
        android:id="@+id/btnBusy"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:background="@drawable/round_toggle"
        android:checked="true"
        android:textOff="Not Busy"
        android:textOn="Busy"

        />
</LinearLayout>
